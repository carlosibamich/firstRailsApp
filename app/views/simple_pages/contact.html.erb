<header class="contact-head">
  <h1>Contact Us</h1>
</header>
<article class="ul-list">
  <div class="row">
    <ul class="contact-ul col-10 offset-1 col-md-8 offset-md-2 col-lg-4 offset-lg-2">
      <div class="address">
        <li>555 Some Madeup St.<br>
          Phoenix, AZ 85012
        </li>
      </div>
      <div class="email">
        <li>ihe<span class="art">art</span>prints@example.com</li>
      </div>
      <div class="ph-num">
        <li> 602-555-5000</li>
      </div>
    </ul>
    <div class="col-10 offset-1 col-md-8 offset-md-2 col-lg-4 offset-lg-0">
      <%= flash[:notice] %>
      <%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 6 %>
      </div>
      <%= form.submit "Send", class: "form_label btn-style" %>
      <% end %>
    </div>
  </div><!-- end .row -->
  <div class="bottom-space"></div>
</article>
