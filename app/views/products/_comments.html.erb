<div class="product-reviews">
  <p class="comment-intro">What members have said about this product:</p>
  <hr class="comments-border">
  <% @comments.each do |comment| %>
    <div class="row review-comments">
      <p><%= comment.user.first_name %><small><em><%= " #{time_ago_in_words(comment.created_at)} ago" %></em></small></p><br> &nbsp &nbsp
      <div class="rated" data-score="<%= comment.rating %>"></div><br>
      &nbsp &nbsp
      <p><%= comment.body %></p>
      <hr class="separator">
    </div><!-- end .row -->
  <% end %>
</div><!-- end .product-review -->
