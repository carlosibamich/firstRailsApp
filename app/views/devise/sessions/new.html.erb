<section class="container-fluid">
  <h2 class="login-signup-header">Log in</h2>

  <div class="row">
    <div class="col-10 offset-1 col-md-8 offset-md-2 col-lg-4 offset-lg-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group login-signup-flds">
          <%= f.label :email, class: "login-signup-lable" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group login-signup-flds">
          <%= f.label :password, class: "login-signup-lable" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Login", class: "btn-style" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
